<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactListFragment">

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.dilan.example.android.ctcontactlistapplication.views.fragments.ContactListFragment"
        android:label="ContactListFragment">
        <action
            android:id="@+id/action_contactListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <argument
            android:name="isToSave"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="objToSave"
            android:defaultValue="@null"
            app:argType="com.dilan.example.android.ctcontactlistapplication.model.ContactData"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.dilan.example.android.ctcontactlistapplication.views.fragments.DetailsFragment"
        android:label="DetailsFragment">
        <argument
            android:name="contactData"
            app:argType="com.dilan.example.android.ctcontactlistapplication.model.ContactData"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailsFragment_to_contactListFragment"
            app:destination="@id/contactListFragment" />
    </fragment>
</navigation>